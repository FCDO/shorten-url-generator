<div class="container-sm">
  <div class="row">
    <div class="col">
      <h1 class="mt-2">Success!Please use this link:</h1>
      <form action="/shorten" method="get">
        <div class='row'>
          <input type="url" class="form-control" value={{shorten_url}} id="url">
        </div>
        <div class='row d-flex justify-content-center'>
          <button type="copy" class="btn btn-primary mt-2" onclick="copyLink()" style="width:200px">Copy</button>

        </div>

      </form>

    </div>

  </div>

</div>
<script>
  function copyLink() {

    let copyText = document.getElementById("url").value
    navigator.clipboard.writeText(copyText)
      .then(() => {
        console.log('內容已複製')
      })
      .catch((err) => {
        console.log(err)
      })


  }
</script>